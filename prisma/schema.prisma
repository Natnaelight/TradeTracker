generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model User {
  id           String   @id @default(uuid())
  telegramId   String   @unique
  name         String
  role         Role
  trades       Trade[]
  createdAt    DateTime @default(now())
}

model Trade {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  amount       Float
  note         String?
  date         DateTime
  createdAt    DateTime @default(now())
}

model Capital {
  id           String   @id @default(uuid())
  amountBirr   Float
  amountUsd    Float
  exchangeRate Float
  createdAt    DateTime @default(now())
}

enum Role {
  trader
  partner
}